{
    "doctype": "DocType",
    "name": "Formulation Change Log",
    "module": "RND Nutrition",
    "custom": 1,
    "is_tree": 0,
    "autoname": "format:FL-{yyyy}-{mm}-{####}",
    "fields": [
        {
            "fieldname": "formulation",
            "label": "Formulation",
            "fieldtype": "Link",
            "options": "Formulation",
            "reqd": 1
        },
        {
            "fieldname": "date",
            "label": "Date",
            "fieldtype": "Date",
            "reqd": 1,
            "default": "Today"
        },
        {
            "fieldname": "changed_by",
            "label": "Changed By",
            "fieldtype": "Link",
            "options": "User",
            "reqd": 1,
            "default": "user"
        },
        {
            "fieldname": "change_type",
            "label": "Change Type",
            "fieldtype": "Select",
            "options": "New Formulation\nIngredient Change\nQuantity Change\nProcess Change\nOther",
            "reqd": 1
        },
        {
            "fieldname": "description",
            "label": "Description",
            "fieldtype": "Text Editor",
            "reqd": 1
        },
        {
            "fieldname": "ingredient_changes",
            "label": "Ingredient Changes",
            "fieldtype": "Table",
            "options": "Change Log Ingredient Reference"
        },
        {
            "fieldname": "before_image",
            "label": "Before Image",
            "fieldtype": "Attach Image"
        },
        {
            "fieldname": "after_image",
            "label": "After Image",
            "fieldtype": "Attach Image"
        },
        {
            "fieldname": "status",
            "label": "Status",
            "fieldtype": "Select",
            "options": "Draft\nApproved\nRejected\nImplemented",
            "default": "Draft"
        }
    ],
    "naming_rule": "By fieldname",
    "title_field": "formulation",
    "search_fields": ["formulation", "changed_by", "date"],
    "track_changes": 1,
    "permissions": [
        {
            "role": "System Manager",
            "permlevel": 0,
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "report": 1
        },
        {
            "role": "RND Manager",
            "permlevel": 0,
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 0,
            "report": 1
        }
    ]
}
